{
  "name": "Spotify Lyrics Converter",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Convert Japanese lyrics to romaji on Spotify",
  "homepage_url": "https://github.com/sglkc",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Spotify Lyrics Settings",
    "default_popup": "src/popup/index.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://open.spotify.com/*"
      ],
      "js": [
        "src/content/inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/web/*",
    "lib/*"
  ]
}
